<%- include('../partials/header') %>
    
    <div class="card">
        <div class="card-header text-center">
            <h1>Selamat Datang</h1>
        </div>
        <div class="card-body">
            <form class="row" action="/todos/add" method="post">
                <div class="col-11">
                  <label class="visually-hidden" for="title">Title</label>
                  <div class="input-group">
                    <div class="input-group-text">#</div>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Ketikkan Kerjaan di sini">
                  </div>
                </div>

                <div class="col-1">
                  <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
              </form>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titel</th>
                    <th>Complete</th>
                </tr>
            </thead>
            <tbody>
                <% todos.forEach((todo, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= todo.title %></td>
                    <td><%= todo.completed ? 'Sudah' : 'Belum' %></td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        <div class="card-footer">
            <a class="btn btn-warning" href="/logout">Keluar</a>
        </div>
    </div>
    <%- include('../partials/footer') %>
